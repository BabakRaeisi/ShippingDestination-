                </LinearGradientBrush>

            </Grid.Background>




        </Grid>

        <Label Content="لطفا مقصد را مشخص کنید"  Height="26" Margin="245,66,10,208"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="30" FlowDirection="RightToLeft" Margin="19,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

        <Label x:Name="label1" Margin="37,150,33,42" Content=""/>
        <Button x:Name="button" Content="جستجو" HorizontalAlignment="Left" Margin="144,104,0,0" VerticalAlignment="Top" Width="75" Background="#FF0D5168" Click="Button_Click"/>





    </Grid>
